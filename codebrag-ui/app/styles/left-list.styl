// commits
.items-list
  position: relative;

.branch-selector
  padding: 0.77em 0.38em;
  position: relative;
  z-index: 3;
  // & input[type=radio]
  //   display:none;
  //   margin:10px;
  // & .button.link
  //   color: $body-text-color;
  //   text-transform: uppercase;
  //   &:hover
  //     color: $main-orange-color;
  //     text-decoration: none;
  & .columns
    padding: 0 0.38em;

    & .dropdown-btn
      background-color: #e7e0ce;
      text-transform: uppercase;
      border: 1px solid #e7e0ce;
      color: $main-orange-color;
      padding: 0.66em 1em;
      position: relative;

      & span
        vertical-align: middle;
        & img
          vertical-align: top;

      & .dropdown-list
        position: absolute;
        background-color: white;
        border: 1px solid #e4d9b8;
        box-shadow: 0 0 7px 0 rgba(211,196,160,0.7);
        z-index: 1000;
        margin: 0.66em 0 0;
        padding: 0.66em 0;
        list-style: none;
        left: 0;
        &:before
          content: "";
          position: absolute;
          top: -7px;
          color: green;
          width: 0;
          height: 0;
          border-left: 6px solid transparent;
          border-right: 6px solid transparent;
          border-bottom: 8px solid white;
          left: 10px;

        & li
          padding: 0.66em 1.5em;
          text-transform: none;
          transition: background-color 300ms;
          &:hover
            color: white;
            background-color: $main-orange-color;


.list-loader
  position: relative;
  display:none;
  & .info
    position:absolute;
    width: 100%;
    padding: 10px;
    background: rgba(211,196,160,0.9);
    color: #fff;
    text-align: center;
    font-weight: bold;
    z-index: 10;

.items-container
  margin-top: -1px;
  overflow-x: hidden;
  overflow-y: hidden;
  &:hover
    overflow-y: auto;

.load-previous-wrapper
  border-top: none;
  text-align: center;

.load-next-wrapper
  border-top: 1px solid #d1cbb9;
  text-align: center;

.commit-container
  border-top: 1px solid $main-border-color;
  padding: 1.15em 2.3em 0.77em 0.77em;
  position: relative;
  &:hover
    background: white;
    cursor: pointer;
    & i
      display: inherit;
  & i
    color: #c1b28b;
    display: none;
    font-size: 1.2em;
    margin-top: -0.5em;
    position: absolute;
    right: 0.6em;
    top: 50%;
  & .author-box img
    height: 2.3em;
    margin-right: 0.77em;
    width: 2.3em;
  & .commit-name
    color: #70493e;
    font-weight: bold;
    margin-bottom: 0.4em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

  &.reviewed
    background: #ebe6d7;
    &:hover
      background: #f1eee4;

    & .author-box
      opacity: 0.7;

    & .info-box
      opacity: 0.8;
      color: #023818;

    &.active
      & .author-box,
      .info-box
        opacity: 1;

  &.active
    background: white;
    z-index:2;
    &:before
      background: $main-orange-color;
      content: "";
      height: 100%;
      left: 0;
      position: absolute;
      top: 0px;
      width: .38em;
      z-index: 1;
    & i
      display: block;

.items-container .commit-container:first-child
  margin-top: -1px;

.items-container .commit-container:last-child
  border-bottom: 1px solid $main-border-color;

.commits-count
  background: $body-bg-color;
  border-top: 1px solid $main-border-color;
  bottom: 0;
  color: $second-body-text-color;
  margin-top: -1px;
  padding: 1.15em 0;
  text-align: center;
  text-transform: uppercase;
  cursor: pointer;
  & span
    margin-right: 3px;

.no-more-items
  color: rgb(173, 130, 69);
  font-size: 22px;
  font-weight: bold;
  margin-top: 3em;
  min-height: 154px;
  min-width: 156px;
  padding-top: 132px;
  text-align: center;
  text-transform: uppercase;


// followups
#followups-tab-content
  padding-top: 1.15em;

  & .items-container
    padding: 0 0.77em 0 0.38em;


.followups-container
  background: $followups-container-bg;
  margin-bottom: 1.15em;
  padding: 0.77em 0.38em 0.38em;

  & .info-line
    color: $followup-infoline-color;
    margin-bottom: 0.77em;

  & .commit-name
    color: $followup-commit-name-color;
    font-weight: bold;
    margin-bottom: 0.4em;
    opacity: 0.75;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

.followup-container
  background: $body-bg-color;
  border: 1px solid #e2d8bf;
  margin-top: -1px;
  padding: 0.77em 2.3em 0.77em 0.77em;
  position: relative;
  &:hover
    background: white;
    cursor: pointer;
    & i
      display: inherit;

  & i
    color: #c1b28b;
    display: none;
    font-size: 1.2em;
    margin-top: -0.5em;
    position: absolute;
    right: 0.6em;
    top: 50%;
  & .author-box img
    height: 1.54em;
    margin-right: 0.77em;
    width: 1.54em;
  & .comment
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  &.active
    background: white;
    width: 480px;
    z-index: 2;
    &:before
      background: #f3720b;
      content: "";
      height: 100%;
      left: 0;
      position: absolute;
      top: 0px;
      width: 0.38em;
      z-index: 1;