.main-header
  background: $header-bg-color;
  color: $header-text-color;
  height: 4.4em;
  overflow: visible;
  & .logo
    display: inline-block;
    vertical-align: top;
    margin: 0.34em 5em;
    width: 128px;
  & .pull-right-wrapper
    padding: 0.98em 0;

.main-nav
  display: inline-block;
  margin-bottom: -1px;
  & .button
    background: transparent;
    border: none;
    box-shadow: none;
    color: $header-text-color;
    font-size: 0.93em;
    font-weight: bold;
    margin: 0 0 -1px;
    padding: 0.85em 0;
    text-transform: uppercase;
    width: 11.15em;
    &:hover
      color: $main-orange-color;
    &:active
      box-shadow: none;

    &.active
      background: $body-bg-color;
      border-top: 0.39em solid $main-orange-color;
      color: $header-bg-color;
      padding-top: 0.47em;

    & .number
      display: block;
      font-size: 2.15em;
      font-weight: normal;

.demo-nav
  background: rgba(255, 255, 255, 0.2);
  display: inline-block;
  padding: 2px;
  position: relative;
  float: left;
  & a
    margin-right: 1em;
    padding: 0 1em;
    color: inherit

.uservoice-btn
  background: #99ab01;
  border-color: #788600;
  vertical-align: top;
  margin-right: 4em;
  &:hover
    background: #99ab01;
  &:active
    background: #8a9b00;

.header-user-info
  cursor: pointer;
  display: inline-block;
  margin-right: 2em;
  overflow: visible;
  position: relative;
  & img
    float: left;
    margin-right: 0.38em;
    width: 2.3em;
  & .arrow-down
    float: right;
    margin-top: 0.77em;
  & a
    color: inherit;
    text-decoration: none;

  &:hover .arrow-down
    border-top-color: $main-orange-color;

  &:hover .user-info-dropdown
    opacity: 1;
    z-index: 3;

.user-info-dropdown
  background: $header-bg-color;
  list-style: none;
  margin: 2.3em 0 0;
  opacity: 0;
  padding: 0;
  position: absolute;
  right: 0;
  top: 0;
  width: 15em;
  z-index: -1;
  transition: opacity 300ms;
  -webkit-backface-visibility: hidden;

  & li
    padding: 0.77em;
    &:hover
      background: $header-bg-color-darker;
      color: $main-orange-color;

      & a
        display: block;

    &.username
      cursor: default;
      &:hover
        color: $header-text-color;