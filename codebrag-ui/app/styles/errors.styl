// error wich is shown at the top right corner
.popup-error
  background: $error-red-color;
  color: $error-text-color;
  padding: 0.77em 1.15em;
  text-align: center;
  display: inline-block;
  position: fixed;
  top: 0.77em;
  right: 1.54em;
  z-index: 1000;
  & i
    margin-right: 5px;

.login-error
  background: $error-red-color;
  color: $error-text-color;
  padding: 0.77em 1.15em;
  text-align: center;

.text-error
  color: $error-red-color;

.spinner 
  display: none;
  height: 24px;
  margin-bottom: 1.15em;
  position: relative;
  text-align: center;