// rewriting foundaton styles
.row
  max-width: 100%;

.button,
.button[disabled],
button
  // All standard orange buttons.
  border: 1px solid #F55902;
  box-shadow: none;
  font-weight: normal;
  margin: 0 0.77em 1px;
  padding: 0.66em 1.15em;
  text-transform: uppercase;
  &:hover
    background: #f3720b;
    box-shadow: inset 0 0 0px 1px rgba(255, 255, 255, 0.5);
  &:active
    background: #d85f00;
  &:focus
    background: #a14700;
    color: white;
    outline: 0;

  &.secondary
    color: white;
    &:hover
      color: white;
    &:focus
      background: #998d68;
      color: white;

  &.accept
    // General style for green buttons (mark commit as reviewed, ok thx, etc.)
    background: $green-button-bg-color;
    border: 1px solid #3CAD8E;
    float: right;
    &:hover
      background: $green-button-bg-color;
    &:active
      background: $green-button-bg-hover;

    &.okthx
      margin: 0.77em 0 0 0.77em;

  &.reviewed-inactive
    float: right;

  &.link
    //Buttons that look like a link (see commits sorting for example)
    background: transparent;
    border: 1px solid transparent;
    color: $second-body-text-color;
    text-transform: none;
    transition: color 250ms;
    &:hover
      background: #ece7d9;
      border: 1px solid #dad1b9;
      color: $main-orange-color;
    &:active
      background: #ece7d9;
    &:focus
      background: #e4dece;
      color: $second-body-text-color;

  &.light
    background: #ece7d9;
    border: 1px solid #dad1b9;
    color: $second-body-text-color;
    transition: color 250ms;
    &:hover
      background-color: #e4dece;
      color: $main-orange-color;
    &:active
      background-color: #e4dece;
      color: $main-orange-color;
    &:focus
      background: #e4dece;
      color: $main-orange-color;


.button-group
  padding-left: 0;

table tr:nth-of-type(even)
  background: white;

table tr th,
table tr td
  font-size: 1em;
  color: $body-text-color;
  padding: 0.23em 0.77em;

// General styles
html,
body
  height: 100%;

body
  background: $body-bg-color;
  color: $body-text-color;
  font-family: 'PT Sans', Tahoma, sans-serif;
  line-height: 1.2;
  overflow: hidden;

h1, 
h2, 
h3, 
h4, 
h5, 
h6
  font-family: 'PT Sans', Tahoma, sans-serif;

p
  line-height: 1.4;
  &:first-child
    margin-top: 0;

::selection
  background-color: #fcd01a;
  color: $body-text-color;

::-webkit-scrollbar
  width: 13px;
  height: 13px;
 
::-webkit-scrollbar-track
  background-color: rgba(216, 198, 158, 0.6);
  opacity: 0.6;
 
::-webkit-scrollbar-thumb
  background-color: rgba(197, 172, 124, 0.6);
  opacity: 0.6;

i
  font-family: 'FontAwesome';
  cursor: pointer;

.pull-right-wrapper
  float: right;

.clearfix:after
  content: "."; 
  visibility: hidden; 
  display: block; 
  height: 0; 
  clear: right;



// CONSTRUCTIONS
.authored-box
  overflow: hidden;

  & .author-box
    float: left;
    vertical-align: top;


.info-box
  overflow-y: hidden;

.info-line
  color: $second-body-text-color;
  font-size: 11px;
  font-weight: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

  & .time
    margin-left: 0.3em;


.comments-container
  background: $body-bg-color;
  border: 1px solid $main-border-color;
  font-family: 'PT Sans', Tahoma, sans-serif;
  padding: 1.15em 1.15em 0;

  & .comment
    margin-bottom: 1.15em;

    & .authored-box
      margin-bottom: 0;

      & .author-box img
        height: 2.3em;
        width: 2.3em;

      & .info-line
        line-height: 1.2;
        margin-bottom: 0.2em;

      & p:last-child
        margin-bottom: 0;
      & p:first-child
        margin-top: 0;

    // .comment.write block
    &.write
      & .icon-info-sign
        color: #d4c195;
        font-size: 1.08em;
        position: absolute;
        right: 0;
        top: -1px;
        visibility: hidden;

      & .comment-body
        padding: 0;

        & textarea.comment-text
          border: none;
          box-shadow: none;
          color: $body-text-color;
          cursor: text;
          font-size: 1em;
          height: auto;
          margin: 0;
          overflow: auto;
          padding: 0.77em;
          resize: vertical;
          transition: min-height 500ms;

      & .comment-action-btns
        display: none;
        float: right;

        & .okthx
          margin: 0 0.77em;

      &.active
        overflow-y: hidden;
        position: relative;

        & .icon-info-sign
          visibility: visible;

        & .comment-body
          border: 1px solid $main-orange-color;
          margin-bottom: 0.77em;

          & textarea.comment-text
            min-height: 57px;
            visibility: visible;

        & .comment-action-btns
          display: block;


// small arrows (next to user avatar in header)
.arrow-down 
  border-left: 0.38em solid transparent;
  border-right: 0.38em solid transparent;
  border-top: 0.38em solid $header-text-color;
  height: 0;
  width: 0;

// bubble displayed on mouse-over.
// Add this class to element you want to have bubble and as a child create '.help-info'
.help-bubble
  .help-info
    height: 0;
    opacity: 0;
    padding: 0;
    width: 0;

  &:hover .help-info
    font-family: 'PT Sans', Tahoma, sans-serif;
    position: absolute;
    color: #a27d69;
    background-color: #ece7d9;
    height: auto;
    opacity: 1;
    padding: 0.66em 1.5em;
    border: 1px solid #dad1b9;
    margin: 8px 0 0 -11px;
    width: 200px;
    &:before
      content: "";
      position: absolute;
      top: -7px;
      color: green;
      width: 0;
      height: 0;
      border-left: 6px solid transparent;
      border-right: 6px solid transparent;
      border-bottom: 8px solid #ece7d9;
      left: 10px;

