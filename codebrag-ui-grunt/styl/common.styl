// rewriting foundaton styles
.row
  max-width: 100%;

.button,
.button[disabled],
button
  border: 1px solid #F55902;
  box-shadow: none;
  font-weight: normal;
  margin: 0 0.77em 0;
  padding: 0.66em 1.15em;
  text-transform: uppercase;
  &:hover
    background: #d85f00;
  &:active
    background: #d85f00;
    box-shadow: inset 0 0 0px 1px rgba(255, 255, 255, 0.5);
  &:focus
    background: #a14700;
    color: white;
    outline: 0;
  &:first-child
    margin-left: 0;
  &:last-child
    margin-right: 0;

  &.secondary
    color: white;
    &:hover
      color: white;
    &:focus
      background: #998d68;
      color: white;

  &.kthxbye
    background: #41a388;
    &:hover
      background: #5abfa3;

  &.link
    background: transparent;
    border: none;
    color: $second-body-text-color;
    text-transform: none;
    transition: color 250ms;
    &:hover
      background: transparent;
      color: $main-orange-color;
    &:active
      background: #ece7d9;
    &:focus
      background: #e4dece;
      color: $second-body-text-color;

  &.reviewed, &.to-review
    float: right;
    margin-right: 0;
    margin-top: 1.15em;
  &.reviewed
    background: $gray-button-bg-color;
    cursor: default
  &.to-review
    background: $green-button-bg-color;
    &:hover
      background: $green-button-bg-hover;

.button-group
  padding-left: 0;

.button-group li:last-child .button,
li:last-child .button
  margin-right: 0;

table tr:nth-of-type(even)
  background: white;

table tr th,
table tr td
  font-size: 1em;
  color: $body-text-color;
  padding: 0.23em 0.77em;

// general styles
html,
body
  height: 100%;

body
  background: $body-bg-color;
  color: $body-text-color;
  font-family: 'PT Sans', Tahoma, sans-serif;
  line-height: 1.2;
  overflow: hidden;

h1, 
h2, 
h3, 
h4, 
h5, 
h6
  font-family: 'PT Sans', Tahoma, sans-serif;

p
  line-height: 1.4;

::selection
  background-color: #fcd01a;
  color: $body-text-color;

::-webkit-scrollbar
  width: 13px;
  height: 13px;
 
::-webkit-scrollbar-track
  background-color: rgba(216, 198, 158, 0.6);
  opacity: 0.6;
 
::-webkit-scrollbar-thumb
  background-color: rgba(197, 172, 124, 0.6);
  opacity: 0.6;

i
  font-family: 'FontAwesome';
  cursor: pointer;

.pull-right-wrapper
  float: right;

.clearfix:after
  content: "."; 
  visibility: hidden; 
  display: block; 
  height: 0; 
  clear: right;

// small arrows (next to user avatar in header)
.arrow-down 
  border-left: 0.38em solid transparent;
  border-right: 0.38em solid transparent;
  border-top: 0.38em solid $header-text-color;
  height: 0;
  width: 0;