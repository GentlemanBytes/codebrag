// constructions
.authored-box
  overflow: hidden;
  & .author-box
    float: left;
    vertical-align: top;

.info-box
  overflow-y: hidden;
  & .info-line
    color: $second-body-text-color;
    font-size: 11px;
    // font-size: 0.7em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  & .time
    margin-left: 0.3em;

.comments-container
  background: $body-bg-color;
  border: 1px solid $main-border-color;
  font-family: 'PT Sans', Tahoma, sans-serif;
  padding: 1.15em 1.15em 0;
  & .comment
    margin-bottom: 1.15em;
    & .authored-box
      margin-bottom: 0;
      & .author-box img
        height: 2.3em;
        width: 2.3em;
      & .info-line
        line-height: 1.2;
        margin-bottom: 0.2em;
      & p:last-child
        margin-bottom: 0;
      & p:first-child
        margin-top: 0;
    // .comment.write block
    &.write
      & .icon-info-sign
        color: #d4c195;
        font-size: 1.08em;
        position: absolute;
        right: 0;
        top: -1px;
        visibility: hidden;
      & .comment-body
        padding: 0;
        & textarea.comment-text
          border: none;
          box-shadow: none;
          color: $body-text-color;
          cursor: text;
          font-size: 1em;
          height: auto;
          margin: 0;
          overflow: auto;
          padding: 0.77em;
          resize: vertical;
          transition: min-height 500ms;
      & .comment-action-btns
        display: none;
        float: right;
        & li
          margin: 0 0.77em;
          &:first-child
            margin-left: 0;
          &:last-child
            margin-right: 0;
      &.active
        overflow-y: hidden;
        position: relative;
        & .icon-info-sign
          visibility: visible;
        & .comment-body
          border: 1px solid $main-orange-color;
          margin-bottom: 0.77em;
          & textarea.comment-text
            min-height: 57px;
            visibility: visible;
        & .comment-action-btns
          display: block;


