@import "normalize.min.css"
@import "foundation.min.css"
@import "nib"


// COLORS:
$body-text-color = #2f0200
$second-body-text-color = #a27d69
$body-bg-color = #f7f5ef

$header-bg-color = #300300
$header-text-color = #ad8245

$main-orange-color = #f3720b
$green-button-bg-color = #5abfa3
$green-button-bg-hover = #41a388

$lime-green-color = #99ab01

$error-red-color = #f0552f
$error-text-color = #ffd8cf


$form-input-bg-color = #f2ecd5
$main-border-color = #d1cbb9


// rewriting foundaton styles
.row
  max-width: 100%;

.button,
.button[disabled],
button
  border: none;
  box-shadow: none;
  font-weight: normal;
  margin: 0 1.15em 0 0;
  padding: 0.77em 1.15em;
  text-transform: uppercase;
  &.secondary
    color: white;
    &:hover
      color: white;
    &:focus
      background: #998d68;
      color: white;
  &.kthxbye
    background: #41a388;
    &:hover
      background: #5abfa3;
  &.link
    background: transparent;
    color: $second-body-text-color;
    text-transform: none;
    transition: color 250ms;
    &:hover
      background: transparent;
      color: $main-orange-color;
    &:active
      background: #ece7d9;
    &:focus
      background: #e4dece;
      color: $second-body-text-color;
  &.big
    padding: 1.15em 2.3em;
    &.reviewed
      background: $green-button-bg-color;
      float: right;
      margin-right: 0;
      margin-top: 1.15em;
      &:hover
        background: $green-button-bg-hover;
  &:active
    box-shadow: 0 1px 0 rgba(0,0,0,0.05) inset;
  &:focus
    background: #a14700;
    color: white;
    outline: 0;

.button-group
  padding-left: 0;

.button-group li:last-child .button,
li:last-child .button
  margin-right: 0;

table tr:nth-of-type(even)
  background: white;

table tr th,
table tr td
  font-size: 1em;
  color: $body-text-color;
  padding: 0.23em 0.77em;

input[type="text"],
input[type="password"],
input[type="date"],
input[type="datetime"],
input[type="datetime-local"],
input[type="month"],
input[type="week"],
input[type="email"],
input[type="number"],
input[type="search"],
input[type="tel"],
input[type="time"],
input[type="url"],
label,
textarea,
select
  font-size: 1em;
  margin-bottom: 1.15em;

input[type="checkbox"]
  margin-bottom: 0;

label
  color: $second-body-text-color;


// general styles
html,
body
  height: 100%;

body
  background: $body-bg-color;
  font-family: 'PT Sans', Tahoma, sans-serif;
  line-height: 1.2;
  overflow: hidden;

h1, 
h2, 
h3, 
h4, 
h5, 
h6
  font-family: 'PT Sans', Tahoma, sans-serif;

p
  line-height: 1.4;

::selection
  background-color: #fcd01a;
  color: $body-text-color;

::-webkit-scrollbar
  width: 13px;
  height: 13px;
 
::-webkit-scrollbar-track
  background-color: rgba(216, 198, 158, 0.6);
  opacity: 0.6;
 
::-webkit-scrollbar-thumb
  background-color: rgba(197, 172, 124, 0.6);
  opacity: 0.6;

i
  font-family: 'FontAwesome';
  cursor: pointer;

.clearfix:after
  content: "."; 
  visibility: hidden; 
  display: block; 
  height: 0; 
  clear: right;

.diff-loading
    text-align: center;
    padding-top: 1em;
    padding-bottom: 1em;

.no-items-trophy
    background-image: url("/images/trophy.png");
    background-position: center center;
    background-repeat: no-repeat;
    min-height: 550px;

.pick-commit
  background-image: url("/images/pick-commit.png");
  background-position: center center;
  background-repeat: no-repeat;
  min-height: 550px;

.pick-followup
  background-image: url("/images/pick-followup.png");
  background-position: center center;
  background-repeat: no-repeat;
  min-height: 550px;

// constructions
.authored-box
  overflow: hidden;
  & .author-box
    float: left;
    vertical-align: top;

.info-box
  overflow-y: hidden;
  & .info-line
    color: $second-body-text-color;
    font-size: 11px;
    // font-size: 0.7em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  & .time
    margin-left: 0.3em;

.comments-container
  background: $body-bg-color;
  border: 1px solid $main-border-color;
  font-family: 'PT Sans', Tahoma, sans-serif;
  padding: 1.15em 1.15em 0;
  & .comment
    margin-bottom: 1.15em;
    & .authored-box
      margin-bottom: 0;
      & .author-box img
        height: 2.3em;
        width: 2.3em;
      & .info-line
        line-height: 1.2;
        margin-bottom: 0.2em;
      & p:last-child
        margin-bottom: 0;
      & p:first-child
        margin-top: 0;
    // .comment.write block
    &.write
      & .icon-info-sign
        color: #d4c195;
        font-size: 1.08em;
        position: absolute;
        right: 0;
        top: -1px;
        visibility: hidden;
      & .comment-body
        padding: 0;
        & textarea.comment-text
          border: none;
          box-shadow: none;
          color: $body-text-color;
          cursor: text;
          font-size: 1em;
          height: auto;
          margin: 0;
          overflow: auto;
          padding: 0.77em;
          resize: vertical;
          transition: min-height 500ms;
      & .comment-action-btns
        display: none;
        float: right;
      &.active
        overflow-y: hidden;
        position: relative;
        & .icon-info-sign
          visibility: visible;
        & .comment-body
          border: 1px solid $main-orange-color;
          margin-bottom: 0.77em;
          & textarea.comment-text
            min-height: 57px;
            visibility: visible;
        & .comment-action-btns
          display: block;

form
  margin: 0;
  padding: 0;
  font-size: 1em;
  & .form-header
    background: $header-bg-color;
    color: $header-text-color;
    height: 5.38em;
    text-align: center;
    & img.logo
      margin-top: 0.77em;
  & fieldset
    border: none;
    margin: 0;
    padding: 1.15em;
    & .prefix
      background: $lime-green-color;
      border: none;
      color: white;
      display: inline-block;
      float: left;
      font-size: 1em;
      width: 2.3125em;
  & .form-group
    position: relative;
    &.inline
      display: inline-block;
    & span.text-error
      background: $error-red-color;
      bottom: 0.1em;
      color: $error-text-color;
      font-size: 0.814em;
      padding: 0.2em;
      position: absolute;
      right: 0;
      & i
        color: $error-red-color;
        position: absolute;
        right: 0.6em;
        top: -1.68em;
      &:after
        border: 4px solid transparent;
        border-bottom-color: $error-red-color;
        content: "";
        position: absolute;
        right: 0.6em;
        top: -8px;


// header styles
.main-header
  background: $header-bg-color;
  color: $header-text-color;
  height: 5.38em;
  & .logo
    display: inline-block;
    vertical-align: top;
    margin: 1em 5em 0;
    width: 127px;
  & .user-info
    float: right;
    margin: 0 0.77em 0 1.54em;
    vertical-align: top;
    & .username
      display: inline-block;
      margin-top: 0.77em;
      vertical-align: middle;
    & .logout
      display: inline-block;
      margin-top: 0.77em;
      vertical-align: middle;
      &:hover
        color: $main-orange-color;
    & img
      float: right;
      margin-left: 0.38em;
      width: 2.3em;
  & a
    color: inherit;
    text-decoration: none;

.main-nav
  display: inline-block;
  margin-bottom: -1px;
  & .button
    background: transparent;
    color: $header-text-color;
    font-weight: bold;
    margin-bottom: -1px;
    padding: 1.15em 0;
    text-transform: uppercase;
    width: 11.15em;
    &:hover
      color: $main-orange-color;
    & .number
      display: block;
      font-size: 2.3em;
      font-weight: normal;
    &.active
      background: $body-bg-color;
      border-top: 0.39em solid $main-orange-color;
      color: $header-bg-color;
      padding-top: 0.77em;

.demo-nav
  background: rgba(255, 255, 255, 0.2);
  display: inline-block;
  padding: 2px;
  position: absolute;
  right: 0;
  & a
    margin-right: 1em;
    padding: 0 1em;

.header-user-info
  display: inline-block;
  position: absolute;
  right: 0;
  top: 30px;

a.uservoice-btn
  background: #99ab01;
  color: white;
  float: right;
  margin: 0 1.54em 0 0;
  padding: 0.77em 1.15em;
  text-transform: uppercase;
  vertical-align: top;
  &:hover
    background: #8a9b00;

a.ribbon
  background: $main-orange-color;
  bottom: 19px;
  color: white;
  display: inline-block;
  left: -44px;
  opacity: 0.9;
  padding: 0.5em;
  position: fixed;
  text-align: center;
  text-decoration: none;
  width: 154px;
  z-index: 1000;
  transform: rotate(45deg);
  &:hover
    opacity: 1;

.popup-page
  background-color: rgba(0,0,0,0.7);
  bottom: 0;
  display: none;
  height: 100%;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  width: 100%;
  z-index: 1000;
  &.opened
    display: block;
  & .popup-box
    background-color: $body-bg-color;
    left: 50%;
    margin-left: -250px;
    max-width: 500px;
    padding: 2.3em;
    position: fixed;
    top: 35%;
    & h1
      font-size: 1.17em;
      margin-top: 0;
      text-align: center;
    & .close-btn
      background: $form-input-bg-color;
      color: $error-red-color;
      display: inline-block;
      padding: 0.77em;
      position: absolute;
      right: 0;
      top: 0;
      transition: background 250ms, color 250ms; 
      &:hover
        background: $error-red-color;
        color: white;
    & a
      color: $main-orange-color;
      text-decoration: none;
    & blockquote
      background: $form-input-bg-color;
      border-left: 0.38em solid $main-orange-color;
      color: $second-body-text-color;
      font-style: italic;
      line-height: 1.4;
      margin: 1.5em 0 0;
      padding: 0.77em 1em 0.77em 2.3em;
      & footer
        font-style: normal;
        margin-top: 0.5em;

// commits
.items-list
  // height calculated in JS = windowHeight - headerHeight
  height: 700px;
  padding-bottom: 3.3em;
  position: relative;

.sorting
  border-bottom: 1px solid $main-border-color; 
  padding: 1.15em;
  text-align: center;
  & .button.link
    color: $body-text-color;
    text-transform: uppercase;
    &:hover
      color: $main-orange-color;
      text-decoration: none;

.items-container
  overflow-x: hidden;
  overflow-y: hidden;
  &:hover
    overflow-y: auto;

.commit-container
  border-top: 1px solid $main-border-color;
  padding: 1.15em 2.3em 1.15em 0.77em;
  position: relative;
  width: 100%;
  &:hover
    background: white;
    cursor: pointer;
    & i
      display: inherit;
  & i
    color: #c1b28b;
    display: none;
    font-size: 1.2em;
    margin-top: -0.5em;
    position: absolute;
    right: 0.6em;
    top: 50%;
  & .author-box img
    height: 2.3em;
    margin-right: 0.77em;
    width: 2.3em;
  & .commit-name
    color: #70493e;
    font-weight: bold;
    margin-bottom: 0.4em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  &.reviewed .author-box
    opacity: 0.4;
  &.reviewed .info-box
    opacity: 0.4;
  &.active
    background: white;
    z-index:2;
    &:before
      background: $main-orange-color;
      content: "";
      height: 100%;
      left: 0;
      position: absolute;
      top: 0px;
      width: .38em;
      z-index: 1;
    & i
      display: block;

.items-container .commit-container:first-child
  margin-top: -1px;

.items-container .commit-container:last-child
  border-bottom: 1px solid $main-border-color;

.commits-count
  background: $body-bg-color;
  border-top: 1px solid $main-border-color;
  bottom: 0;
  color: $second-body-text-color;
  margin-top: -1px;
  padding: 1.15em 0;
  text-align: center;
  text-transform: uppercase;
  cursor: pointer;
  & span
    margin-right: 3px;

.no-more-items
  color: rgb(173, 130, 69);
  font-size: 22px;
  font-weight: bold;
  margin-top: 3em;
  min-height: 154px;
  min-width: 156px;
  padding-top: 132px;
  text-align: center;
  text-transform: uppercase;


// followups
#followups-tab-content .items-container
  padding-right: 2.3em;  

.followups-container
  background: #eee8d7;
  margin-bottom: 0.77em;
  padding: 0.77em 0.38em 0.38em;
  & .info-line
    margin-bottom: 0.77em;
  & .commit-name
    color: #70493e;
    font-weight: bold;
    margin-bottom: 0.4em;
    opacity: 0.75;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

.followup-container
  background: #faf8ed;
  border: 1px solid #e2d8bf;
  margin-top: -1px;
  padding: 0.77em 2.3em 0.77em 0.77em;
  position: relative;
  &:hover
    background: white;
    cursor: pointer;
    & i
      display: inherit;
  & i
    color: #c1b28b;
    display: none;
    font-size: 1.2em;
    margin-top: -0.5em;
    position: absolute;
    right: 0.6em;
    top: 50%;
  & .author-box img
    height: 1.54em;
    margin-right: 0.77em;
    width: 1.54em;
  & .comment
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  &.active
    background: white;
    width: 480px;
    z-index: 2;
    &:before
      background: #f3720b;
      content: "";
      height: 100%;
      left: 0;
      position: absolute;
      top: 0px;
      width: 0.38em;
      z-index: 1;

#followups-tab-content .items-container .commmit-container:first-child
  margin-top: 0.77em;



// diff
.diff
  // height calculated in JS (same as commitsHeight)
  height: 700px;
  padding: 0.77em 0.77em 2.3em 0;
  &.opened
    position: absolute;
    right: 0;
    width: 100%;
    transition: width 1000ms;
    z-index: 3;
    & .toggle-diff-container-btn:hover i
      margin-left: 12px;

.diff-wrapper
  height: 100%;
  background: #fff;
  border: 1px solid #e4d9b8;
  box-shadow: 0 0 7px 0 rgba(211,196,160,0.7);
  margin-left: -1px;
  overflow-y: hidden;
  &:hover
    overflow-y: auto;

.diff-container
  padding: 2.3em 1.15em 1.15em 2.3em;
  & .authored-box 
    margin-bottom: 2.3em;
    & img
      margin-right: 1.15em;
      width: 3.85em;
    & .commit-name
      font-weight: bold;
      line-height: 1.3;
      margin-bottom: 0.4em;

.toggle-diff-container-btn
  background: white;
  border: 1px solid #e4d9b8;
  border-right: none;
  bottom: 2.3em;
  cursor: pointer;
  left: 0;
  opacity: 0;
  position: absolute;
  top: 0.77em;
  width: 2.2em;
  z-index: 5;
  transition: opacity 250ms, width 500ms, left 500ms;
  &:hover
    left: -0.77em;
    opacity: 1;
    width: 2.9em;
  & i
    color: $main-orange-color;
    margin-left: 5px;
    position: absolute;
    top: 45%;

.diff-statistics
  clear: left;
  color: $main-orange-color;
  margin-bottom: 1.15em;
  text-transform: uppercase;

.diff-table-wrapper
  border: 1px solid $main-border-color;
  margin-bottom: 2.3em;
  overflow-x: auto;
  overflow-y: hidden;

.diff-file-container
  border: none;
  font-family: Consolas, "Liberation Mono", Courier, monospace;
  margin: 0;
  width: 100%;
  & thead
    background: $body-bg-color;
    border-bottom: 1px solid $main-border-color;
    & th
      color: $body-text-color;
      font-size: 1em;
      font-weight: normal;
      padding: 0.77em 1.15em;
      text-align: left;
  & tbody
    font-size: 13px;
  & .diff-line-code
    white-space: pre;
    cursor: pointer;
  & .diff-line-num
    border-right: 1px solid #d6d6d6;
    line-height: 1.125em;
    margin: 0;
    max-width: 50px;
    min-width: 50px;
    padding: 0;
    text-align: right;
    width: 50px;
    & .button
      background: transparent;
      border: none;
      height: 100%;
      line-height: inherit;
      margin: 0;
      padding: 0;
      position: relative;
      width: 100%;
      &.comment
        background: transparent;
    & .diff-line-num-content
      color: #aaaaaa;
      display: inline-block;
      margin: 0.38em 0.77em;
      height: 14px;
      min-width: 1em;
      vertical-align: middle;
      & span
        display: inline-block;
        min-height: 14px;
    & i
      opacity: 0;
      position: absolute;
      left: 50%;
      margin-left: -0.5em;
      top: 50%;
      margin-top: -0.5em;
  & tr.removed
    background: #ffdddd;
    & .diff-line-num
      background: #f7c8c8;
      border-color: #e9aeae;
    & .diff-line-num-content
      color: #bd8f8f;
  & tr.added
    background: #d4f7c1;
    & .diff-line-num
      background: #bce7a5;
      border-color: #b0cfa3;
    & .diff-line-num-content
      color: #95a88d;
  & tr.header
    background: #efefef;
    & .diff-line-num
      background: #ededed;
      border-color: #cdcdcd;
      color: #ababab;
  & tr.comments-container
    background: $body-bg-color;
    border-left: none;
    border-right: none;
    border-bottom: none;
    & td
      padding: 1.15em 1.15em 0;

.diff-file-container tr.liked-by-user
    & .like.button
      background: #f3720b;
      & .icon-heart
        color: rgb(185, 80, 21);
        opacity: 1;
      & .diff-line-num-content
        opacity: 0;

tbody tr.comments-container:last-child
  border-bottom: 1px solid $main-border-color;

tr:hover .diff-line-num .button
  background: $main-orange-color;
  &:hover
    background: #c25b09;
  &.comment
    background: $green-button-bg-color;
    &:hover
      background: $green-button-bg-hover;
  & .diff-line-num-content
    opacity: 0;
  & i
    opacity: 1;

.diff-not-displayed
  margin-bottom: 2.3em;
  & ul
    margin: 0;
    padding: 0;
  & li
    list-style: none;

.diff-not-displayed h6
  color: $main-orange-color;
  font-size: 1em;
  font-weight: normal;
  margin: 0 0 0.38em 0;
  text-transform: uppercase;

.diff-not-displayed-file-name
  font-family: Consolas, "Liberation Mono", Courier, monospace;
  line-height: 1.4;
  list-style: none;

.diff-not-displayed-stat
  color: $second-body-text-color;
  font-family: 'PT Sans', Tahoma, sans-serif;
  font-size: 0.814em;

.like-commit
  background: $body-bg-color;
  color: $second-body-text-color;
  display: inline-block;
  margin-bottom: 0.38em;
  padding-right: 1.15em;
  & .like.button
    padding: .4em 1.15em 0.25em;
  & span
    display: inline-block;
    margin-top: .2em;
    vertical-align: top;
  &.liked-by-user .like.button
    background: #f3720b;
    & .icon-heart
      color: rgb(185, 80, 21);


// Inline likes
.diff-file-container tr.inline-likes
  background: $body-bg-color;
  color: $main-orange-color;
  padding: 0;
  & td
    padding: 0.38em 0.38em 0.38em 1.15em;
    & .comment
      margin-bottom: 0;

.likes-list
  display: inline;
  list-style: none;
  padding: 0;
  & li
    display: inline;
    margin-right: 5px;
    white-space: nowrap;
    &:after
      content:',';
      position: relative;
  & li:last-child:after
    content:'';

.likes
  color: $main-orange-color;

.scroll-target-reaction-mark
  background: $main-border-color;

.scroll-target-reaction-done
  background: $body-bg-color;
  transition: background 1.5s linear;


// login form
#loginform
  margin-left: -11.61em;
  margin-top: -10.42em;
  left: 50%;
  position: absolute;
  top: 45%;
  & form
    background: white;
    border: 1px solid #e4d9b8;
    box-shadow: 0px 0px 7px 0px rgba(211, 196, 160, 0.7);
    & fieldset
      padding: 2em;
      & button:last-child
        margin-right: 0;
        & span
          text-transform: lowercase;
  & input[type="password"],
    input[type="text"]
    background: $form-input-bg-color;
    border: none;
    box-shadow: none;
    display: inline-block;
    width: 16.8em;
  & .checkbox
    margin-bottom: 2.3em;

.login-error
    background: #f3720b;
    color: #ffd8cf;
    padding: 0.77em 1.15em;
    text-align: center;

.demo-login-info
    background: #f2ecd5;
    color: #a27d69;
    padding: 0.77em 1.15em;
    text-align: center;

.text-error
  color: $error-red-color;

.popup-error
  background: $error-red-color;
  color: $error-text-color;
  padding: 0.77em 1.15em;
  text-align: center;
  display: inline-block;
  position: fixed;
  top: 1.54em;
  right: 1.54em;
  & i
    margin-right: 5px;

.spinner 
  display: none;
  height: 24px;
  margin-bottom: 1.15em;
  position: relative;
  text-align: center;


// for small screens
@media all and (max-width: 1000px) {
  .main-header .logo {
    margin: 1em 1em 0;
    width: 110px;
  }
  .main-nav .button {
    width: 7.15em;
  }

  .main-header .user-info .username {
    max-width: 10em;
    margin-top: 0;
    text-align: right;
  }
  .main-header .user-info .logout {
    max-width: 10em;
    margin-top: 0;
    text-align: right;
  }
}

// for medium screens
@media all and (max-width: 1279px) {
  html {
    font-size: 13px;
  }
  .diff-file-container tr.comments-container {
    font-size: 13px;
  }
}

// for super-big screens
@media all and (min-width: 1280px) {
  html {
    font-size: 14px;
  }
  #loginform fieldset {
    padding: 2.3em;
  }
  #loginform input[type="text"],
  #loginform input[type="password"] {
    width: 17.4em
  }
  .diff-file-container tr.comments-container {
    font-size: 14px;
  }
}